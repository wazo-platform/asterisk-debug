+/* \brief Delay between TTL expiration and the next DNS query, to make sure the
+resolver cache really expired. */
+#define DEFAULT_TTL 30
+#define EXTRA_TTL 1
+#define MAX_TTL ((INT_MAX - EXTRA_TTL) / 1000)
